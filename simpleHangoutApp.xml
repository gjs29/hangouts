<body>

<script src="https://hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.0" ></script>

<h3>Boggle</h3>


<p>
<input class="button" type="button" value="Start game" id="startGame" 
    style="visibility:hidden;"
    onClick="startGame()"/>
</p>

<div id="board"></div>

<hr>


<script>
function startGame() {
  
  var cubes = [ "AAEEGN", "ELRTTY", "AOOTTW", "ABBJOO",
                "EHRTVW", "CIMOTU", "DISTTY", "EIOSST",
                "DELRVY", "ACHOPS", "HIMNQU", "EEINSU",
                "EEGHNW", "AFFKPS", "HLNNRZ", "DEILRX" ];
  shuffleArray(cubes);
  var board = "<table>";

  for (var y=0; y<4; y++){
    board += "<tr>";    
    for (var x=0; x<4; x++){
      var letter = Math.floor(Math.random() * 6);
      board += "<td>" + cubes[(x + y*4)].charAt(letter) + "</td>";
    }
    board += "</tr>";
  }

  var div = document.getElementById('board');
  div.innerHTML = board;
}

function shuffleArray(array) {
  for (var i = array.length - 1; i > 0; i--) {
    var j = Math.floor(Math.random() * (i + 1));
    var temp = array[i];
    array[i] = array[j];
    array[j] = temp;
  }
  return array;
}

function init() {
  // When API is ready...                                                         
  gapi.hangout.onApiReady.add(
      function(eventObj) {
        if (eventObj.isApiReady) {
          document.getElementById('startGame')
            .style.visibility = 'visible';
        }
      });
}

// Wait for gadget to load.                                                       
gadgets.util.registerOnLoadHandler(init);
</script>
</body>
